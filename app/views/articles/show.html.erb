<div class="nav-buttons"><%= button_to "Home", "/" , method: :get , class: "btn btn-secondary"%> <%= button_to "Logout", destroy_user_session_path, method: :delete , class: "btn btn-danger"%></div>
<div class="article">
<h1><%= @article.title %></h1>

<p class="body-text"><%= @article.body %></p>

<ul class="list-group">
  <% if current_user == @article.user %>
  <li class="list-group-item list-group-item-action list-group-item-success">
  <%= link_to "Edit", edit_article_path(@article) %>
  <% end %></li>
  <% if current_user == @article.user %>
  <li class="list-group-item list-group-item-action list-group-item-danger">
  <%= link_to "Delete", article_path(@article), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
</li>
</ul>
</div>