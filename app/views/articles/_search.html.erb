<div class="d-grid gap-2 col-6 mx-auto justify-content-center">
<%= search_form_for @q, url: articles_path, method: :get, as: :q do |f| %>
  <div class="form-control me-2" type="search" placeholder="Search" aria-label="Search" >
  <div class="label">
  <%= f.label :title_cont, "Search by Title" %> </div>
  <%= f.search_field :title_cont %>
  <%= f.submit "Search" , class: "btn btn-primary"%> </div>
<% end %> </div>
