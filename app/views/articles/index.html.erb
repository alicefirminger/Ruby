<h1>Blog Posts</h1>

<%= render 'search' %>
<div class="d-grid gap-2 col-6 mx-auto">
<ul class="list-group">
  <% @articles.each do |article| %>
    <li class="list-group-item list-group-item-action">
      <%= link_to article.title, article %>
    </li>
  <% end %>
</ul>
<%= link_to "New Post", new_article_path, class: "btn btn-success"%> </div>